<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.my.chabaike3.ui.Activity.More">
   <ImageView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:src="@mipmap/logo"
      android:layout_gravity="center"/>
    <TextView
        android:id="@+id/text_shou"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="收藏夹"
        android:background="#6b6666"
        android:textSize="30sp"/>
    <Button
        android:id="@+id/button_shou"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:text="收藏夹"
        android:textSize="30dp"
        android:gravity="left"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#1330d4"/>
    <Button
        android:id="@+id/button_read"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:text="收藏夹"
        android:textSize="30dp"
        android:gravity="left"/>
    <TextView
        android:id="@+id/text_clic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="关于客户端"
        android:background="#6b6666"
        android:textSize="30sp"/>
    <Button
        android:id="@+id/button_news"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:text="版本信息"
        android:textSize="30dp"
        android:gravity="left"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#1330d4"/>
    <Button
        android:id="@+id/button_tell"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:text="意见反馈"
        android:textSize="30dp"
        android:gravity="left"/>

</LinearLayout>
